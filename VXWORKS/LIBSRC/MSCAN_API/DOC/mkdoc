#!/bin/sh

# OS-specific paths!
export MEN_INC_DIR=../../../DEFS/MEN
export MEN_DRV_DIR=../../../IO/MDIS_LL
export FS_DIR=../../../../../../FILESETS

files="Doxyfile"

rm -rf html/* 

for cfg in $files; do
	echo generating $cfg
	doxygen $cfg >/dev/null
done

# Build a fileset include file for dynamically generated files
( 
echo "# Generated by `pwd`/mkdoc"
echo	
echo "SUB ="
for file in *.html *.css; do
	echo $file
done

for dir in html* ; do
	echo	
	echo "SUB = $dir"
	(cd $dir; ls -1 )
done ) > $FS_DIR/ART/13Z015-06/doc.inc


